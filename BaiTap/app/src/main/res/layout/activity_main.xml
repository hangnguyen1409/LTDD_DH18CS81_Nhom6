<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <!--Name of shop-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvShopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/cookie"
            android:text="Youth Memories"
            android:textColor="@color/black"
            android:textSize="50dp"
            android:textStyle="bold"/>
        <!--Name User-->
        <TextView
            android:id="@+id/nameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tvShopName"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/niconne"
            android:text="Hello Hang"
            android:textSize="30dp" />
        <!--Button Edit-->
        <ImageButton
            android:id="@+id/editProfileBtn"
            android:layout_alignParentEnd="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_account_settings"
            tools:ignore="VectorDrawableCompat"
            android:background="@null"/>
        <!--Button Add Product-->
        <ImageButton
            android:id="@+id/addProductBtn"
            android:layout_toStartOf="@+id/editProfileBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_cart_black"
            tools:ignore="VectorDrawableCompat"
            android:background="@null"/>
    </RelativeLayout>
    <!--Advertise-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <!--Girl-->
        <ViewFlipper
            android:id="@+id/view_flipper_girl"
            android:layout_width="202dp"
            android:layout_height="100dp"
            android:layout_marginTop="5dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/blackjean" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/dress" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/set" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/whitemaxi" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/sport" />
        </ViewFlipper>
        <!--Boy-->
        <ViewFlipper
            android:id="@+id/view_flipper_boy"
            android:layout_width="202dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/khoacden" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/khoacvang" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/naucafe" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/shortden" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/xanhden" />
        </ViewFlipper>
    </RelativeLayout>
    <!--Main-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--Show Products,Order-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_tab_product_order">
            <!--Products-->
            <TextView
                android:id="@+id/tvTabProducts"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Products"
                android:textColor="@color/black"
                android:background="@drawable/shape_tab_product_order_fill"/>
            <!--Order-->
            <TextView
                android:id="@+id/tvTabOrders"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Orders"
                android:textColor="@color/black"/>
        </LinearLayout>
        <!--Search Product-->
        <EditText
            android:id="@+id/editText"
            android:layout_width="377dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/search_bg"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            android:drawablePadding="12dp"
            android:fontFamily="monospace"
            android:hint="What are you looking for?"
            android:inputType="textPersonName"
            android:paddingStart="12dp" />
        <!--Show Products,Orders depend on Tab-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--Products-->
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/LLProducts"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </LinearLayout>
            <!--Orders-->
            <LinearLayout
                android:id="@+id/LLOrders"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>


